-- Generated by Rayfield GUI Builder
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Maxi hub",
    LoadingTitle = "Pet duper",
    LoadingSubtitle = "by Maxime",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "Big Hub"
    },
    Discord = {
        Enabled = treu,
        Invite = "https://discord.gg/ysTCPNQPyR",
        RememberJoins = true
    },
    KeySystem = false,
    KeySettings = {
        Title = "Untitled",
        Subtitle = "Key System",
        Note = "No method of obtaining the key is provided",
        FileName = "Key",
        SaveKey = true,
        GrabKeyFromSite = false,
        Key = {"Hello"}
    }
})

local DupeTab = Window:CreateTab("Dupe", 4483362458)

local Dupeequippedpet = DupeTab:CreateButton({
    Name = "Dupe equipped pet",
    Callback = function()
        -- ▼ USER INSERT SCRIPT HERE ▼
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local backpack = player:WaitForChild("Backpack")

-- Check if the player is holding a tool
local heldTool = character:FindFirstChildOfClass("Tool")

if heldTool then
    local clonedTool = heldTool:Clone()
    clonedTool.Parent = backpack
else
    warn("No tool equipped to duplicate.")
end
    end,
})

